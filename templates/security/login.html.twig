{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="mx-auto py-12 w-full md:w-1/2 xl:w-2/5">
    <img class="w-full h-auto my-12"
         src="/images/logo-sword.png" alt="Manen Logo"
    >

    <form method="post" class="xl:mx-auto xl:w-2/3">
        {% if error %}
            <div class="block text-lg mb-4 py-2 px-4 border rounded border-red-400 bg-red-100 text-red-800">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="mb-4">
            <label for="inputUsername" class="block mb-2">
                Identifiant
            </label>
            <input
                    type="text"
                    value="{{ last_username }}"
                    name="username"
                    id="inputUsername"
                    required
                    autofocus
                    class="block border border-1 border-gray-400 w-full rounded py-2 px-3"
            >
        </div>

        <div class="mb-8">
            <label for="inputPassword" class="block mb-2">
                Mot de passe
            </label>
            <input
                    type="password"
                    name="password"
                    id="inputPassword"
                    required
                    class="block border border-1 border-gray-400 w-full rounded py-2 px-3"
            >
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="block py-2 px-3 text-white bg-blue-700 bg-opacity-100 hover:bg-opacity-75 rounded w-full text-center" type="submit">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}
